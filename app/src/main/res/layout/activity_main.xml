<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#143601"
    android:id="@+id/nap_dn_bg"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >

    <ImageView
        android:layout_width="230dp"
        android:layout_height="130dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/nap"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="550dp"

        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome"
                android:textSize="40dp"
                android:fontFamily="@font/icielunisansheavy_1"
                android:textColor="#B0D9B1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:text="Back! NAPer"
                android:textSize="30dp"
                android:fontFamily="@font/icielunisansheavy_1"
                android:textColor="#B0D9B1"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="325dp"
            android:layout_marginLeft="-5dp"
            android:background="@drawable/square2_bg"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/selec_G"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/nap_rd_slc_worker"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Nhân Viên"
                    android:background="@drawable/square_bg"
                    android:textColor="@color/black" />

                <RadioButton
                    android:id="@+id/nap_rd_slc_mana"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:background="@drawable/square_bg"
                    android:text="Quản Lý"
                    android:textColor="@color/black" />

            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:text="Tên đăng nhập : "/>
            <EditText
                android:id="@+id/nap_dn_user"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:inputType="text"
                android:layout_marginLeft="20dp"
                android:background="@drawable/square_bg"
                android:textColor="#004225"
                android:textSize="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:text="Mật khẩu : "/>

            <EditText
                android:id="@+id/nap_dn_pass"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:background="@drawable/square_bg"
                android:textColor="#004225"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/nap_create_mng"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@drawable/square_bg"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:text="Tạo tài khoản"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <ImageButton
                android:id="@+id/nap_btn_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="295dp"
                android:layout_marginTop="-80dp"
                android:background="@null"
                android:src="@drawable/login" />
        </LinearLayout>


        </LinearLayout>
    </LinearLayout>
