<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:backgroundTint="#D0E7D2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="12dp"
    app:cardCornerRadius="16dp"
    android:layout_margin="16dp">

    <ImageButton
        android:id="@+id/room_search_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_cancel"
        android:background="@null"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tìm Phòng ban"
        android:layout_marginTop="70dp"
        android:textSize="30dp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/endcodeseexbold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="20dp"
        android:textSize="18dp"
        android:fontFamily="@font/encode_medium"
        android:text="Chọn mã phòng ban :"/>

    <Spinner
        android:id="@+id/room_search_spinner"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/square3_bg"
        android:layout_marginTop="150dp"
        android:layout_gravity="center_horizontal"/>

    <ImageButton
        android:id="@+id/room_search_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_add"
        android:layout_marginTop="230dp"
        android:layout_gravity="center_horizontal"
        android:background="@null" />
    <TextView
        android:id="@+id/room_search_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>




</androidx.cardview.widget.CardView>