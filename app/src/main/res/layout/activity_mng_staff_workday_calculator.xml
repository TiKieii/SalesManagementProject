<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#3D8361"
    tools:context=".mng_staff_workday_calculator">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:src="@drawable/wave_2"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="-50dp"
        android:src="@drawable/nap"/>

    <ImageButton
        android:id="@+id/wd_cal_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_back"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="-60dp"
        android:background="@null"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trở lại"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:layout_marginLeft="205dp"
        android:layout_marginTop="-10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chấm công nhân viên"
        android:background="#186F65"
        android:textColor="#F5EEC8"
        android:fontFamily="@font/endcodeseexbold"
        android:textSize="30dp" />


    <DigitalClock
        android:id="@+id/wd_cal_time"
        android:layout_width="355dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:fontFamily="@font/boostblack_ex1"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="60dp" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/square_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Mã nhân viên :"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <Spinner
                android:id="@+id/wd_cal_cbx"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/square_bg" />

            <TextView
                android:id="@+id/wd_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Họ tên Nhân viên:"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/wd_cal_name"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/square_bg"
                android:fontFamily="@font/icielunisansheavy_1"
                android:gravity="center"
                android:text="tennv"
                android:textColor="#ccd5ae"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Phòng ban :"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/wd_cal_pb"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/square_bg"
                android:fontFamily="@font/icielunisansheavy_1"
                android:gravity="center"
                android:textColor="#ccd5ae"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="-75dp"
                android:text="Chức vụ :"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/wd_cal_cv"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="200dp"
                android:background="@drawable/square_bg"
                android:fontFamily="@font/icielunisansheavy_1"
                android:gravity="center"
                android:textColor="#ccd5ae"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Trạng thái :"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <RadioGroup
                android:id="@+id/wd_cal_RG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/square_bg"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/wd_cal_onwork"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Có Làm việc"
                    android:textColor="@color/white"
                    android:textSize="17dp" />

                <RadioButton
                    android:id="@+id/wd_cal_offwork"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:text="Nghỉ phép"
                    android:textColor="@color/white"
                    android:textSize="17dp" />
            </RadioGroup>

            <CheckBox
                android:id="@+id/wd_cal_onwork_OT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="Tăng ca"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/wd_cal_tv_OTsub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="-40dp"
                android:text="Số giờ (h) :"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/wd_cal_onwork_OT_time"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="240dp"
                android:layout_marginTop="-40dp"
                android:background="@drawable/square_bg"
                android:fontFamily="@font/icielunisansheavy_1"
                android:gravity="center"
                android:textColor="#ccd5ae"
                android:textSize="23dp" />
        </LinearLayout>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/wd_cal_check"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Chấm công"
        android:layout_marginTop="10dp"
        android:background="@drawable/square_bg"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:fontFamily="@font/boostblack_ex1"
        android:textColor="@color/white"/>
</LinearLayout>