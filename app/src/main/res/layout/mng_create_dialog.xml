<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#D0E7D2">
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="TẠO TÀI KHOẢN QUẢN LÝ"
         android:layout_marginTop="30dp"
         android:textSize="70px"
         android:textStyle="bold"
         android:layout_gravity="center"
         />
    <LinearLayout
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">
        <EditText
            android:id="@+id/dialog_mng_cre_id"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:background="@drawable/square_bg"
            android:layout_marginTop="30dp"
            android:hint="Nhập mã số quản lí"/>
        <EditText
            android:id="@+id/dialog_mng_cre_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:background="@drawable/square_bg"
            android:layout_marginTop="20dp"
            android:hint="Nhập tên quản lí"/>

        <EditText
            android:id="@+id/dialog_mng_cre_pass"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:background="@drawable/square_bg"
            android:hint="Mật khẩu đăng nhập"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Chọn mã Chức vụ : "/>

        <Spinner
            android:id="@+id/digalog_mng_cre_cb_chucvu"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:background="@drawable/square_bg"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-75dp"
            android:layout_marginLeft="150dp"
            android:text="Chọn mã Phòng ban : "/>
        <Spinner
            android:id="@+id/digalog_mng_cre_cb_phongban"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="160dp"
            android:background="@drawable/square_bg"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/digalog_mng_cre_chucvu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/digalog_mng_cre_phongban"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">


            <ImageButton
                android:id="@+id/dialog_mng_cre_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_cancel"
                android:background="@null"
                />

            <ImageButton
                android:id="@+id/dialog_mng_cre_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_add"
                android:layout_marginLeft="130dp"
                android:background="@null"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>