<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#3D8361"
    tools:context=".mng_add_staff">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:src="@drawable/wave_2">
    </ImageView>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="-50dp"
        android:src="@drawable/nap"/>

    <ImageButton
        android:id="@+id/mng_staff_edit_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_back"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="-60dp"
        android:background="@null"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trở lại"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:layout_marginLeft="205dp"
        android:layout_marginTop="-10dp"/>


    <ImageButton
        android:id="@+id/mng_staff_edit_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add_new"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="-60dp"
        android:background="@null"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xong"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:layout_marginLeft="305dp"
        android:layout_marginTop="-10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chỉnh sửa nhân viên"
        android:background="#186F65"
        android:textColor="#F5EEC8"
        android:fontFamily="@font/endcodeseexbold"
        android:textSize="30dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text="Mã nhân viên :"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"/>

            <EditText
                android:id="@+id/mng_staff_edit_msnv"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:background="@drawable/square_bg"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text="Mật khẩu :"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"/>
            <EditText
                android:id="@+id/mng_staff_edit_password"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:inputType="textPassword"
                android:background="@drawable/square_bg"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text="Họ và tên :"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"/>
            <EditText
                android:id="@+id/mng_staff_edit_name"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:inputType="text"
                android:background="@drawable/square_bg"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text="Giới tính :"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"/>
            <RadioGroup
                android:id="@+id/mng_staff_cre_edit_rg"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/square_bg">
                <RadioButton
                    android:id="@+id/mng_staff_cre_edit_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nam"
                    android:textSize="15dp"
                    android:textColor="@color/white"/>
                <RadioButton
                    android:id="@+id/mng_staff_cre_edit_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:text="Nữ"/>
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text="Ngày sinh :"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"/>
            <EditText
                android:id="@+id/mng_staff_edit_bod"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:inputType="date"
                android:background="@drawable/square_bg"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text="Số điện thoại :"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"/>
            <EditText
                android:id="@+id/mng_staff_edit_phone"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:inputType="phone"
                android:background="@drawable/square_bg"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text="Địa chỉ :"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"/>
            <EditText
                android:id="@+id/mng_staff_edit_address"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:inputType="text"
                android:background="@drawable/square_bg"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text="Ngày làm việc :"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"/>
            <EditText
                android:id="@+id/mng_staff_edit_startday"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:inputType="date"
                android:background="@drawable/square_bg"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text="Lương cơ bản :"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"/>
            <EditText
                android:id="@+id/mng_staff_edit_org_salary"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:inputType="number"
                android:background="@drawable/square_bg"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text=" Chọn mã chức vụ : "
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"/>
            <Spinner
                android:id="@+id/mng_staff_edit_rank"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/square_bg"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text=" Chọn mã trình độ : "
                android:layout_marginTop="-85dp"
                android:layout_marginLeft="210dp"
                android:textColor="@color/white"/>
            <Spinner
                android:id="@+id/mng_staff_edit_level"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/square_bg"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text=" Chọn mã phòng ban : "
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"/>
            <Spinner
                android:id="@+id/mng_staff_edit_room"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/square_bg"/>
        </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/mng_staff_edit_tvcv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/mng_staff_edit_tvpb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/mng_staff_edit_tvtd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/mng_staff_edit_tvsex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>