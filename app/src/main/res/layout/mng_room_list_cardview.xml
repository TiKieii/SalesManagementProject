<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mng_room_list_cardview"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="12dp"
    app:cardCornerRadius="16dp"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/encode_medium"
            android:text="Mã Phòng Ban : "
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/room_list_view_mapb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/endcodeseexbold"
            android:text=""
            android:textSize="21dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/encode_medium"
            android:text="Tên phòng ban : "
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/room_list_view_tenpb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/endcodeseexbold"
            android:text=""
            android:textSize="21dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/text_room_cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</androidx.cardview.widget.CardView>