<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3D8361"
    android:orientation="vertical"
    tools:context=".mng_salary">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/wave_2"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chấm Công - Tính Lương Nhân viên"
        android:gravity="fill_vertical"
        android:textSize="30dp"
        android:fontFamily="@font/endcodeseexbold"
        android:textColor="#F5EEC8"
        android:background="#186F65"/>

    <ImageButton
        android:id="@+id/mng_salary_wd_cal"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:src="@drawable/chamcong_ii"
        android:background="@null"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="200dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chấm công"
        android:textSize="18dp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/white"
        android:fontFamily="@font/encode_medium"/>

    <ImageButton
        android:id="@+id/mng_salary_slr_cal"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:src="@drawable/tinhluong"
        android:background="@null"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="-130dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tính lương"
        android:textSize="18dp"
        android:layout_marginLeft="225dp"
        android:textColor="@color/white"
        android:fontFamily="@font/encode_medium"/>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:src="@drawable/nap"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="-290dp"
        android:background="@drawable/square_bg"/>

    <ImageButton
        android:id="@+id/mng_sal_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_back"
        android:layout_marginTop="-90dp"
        android:background="@null"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trở lại"
        android:textSize="18dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/white"
        android:fontFamily="@font/encode_medium"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/wave"
        android:layout_marginTop="330dp"/>




</LinearLayout>